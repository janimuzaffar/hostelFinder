<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecScreen">
    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="715dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:background="#F5EE10"
            android:text="Designed for everyone"
            android:textAlignment="center"
            android:textColor="#020000"
            android:textSize="24sp" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifimg"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/advr" />


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#FAF2A3"
            android:text="Shared or private                     rooms"
            android:textAlignment="center"
            android:textColor="#020000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#FAF2A3"
            android:text="    Full House"
            android:textAlignment="center"
            android:textColor="#020000"
            android:textSize="18sp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="12dp"
                android:layout_height="116dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:text="Share Rent a shared room or private room accommodation with furnishing fully functional kitchen for boys girls."
                android:textAlignment="center"
                android:textColor="#020000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="2dp"
                android:layout_height="116dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:text="  Rent a full Flat, apartment villas with furnishing  fully functional kitchen for group of friends or family. "
                android:textAlignment="center"
                android:textColor="#020000"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/brok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="#F5EE10"
            android:text="login / Register" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>